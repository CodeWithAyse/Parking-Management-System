@model Proje4.Models.AracBilgileri

@{
    ViewData["Title"] = "Edit";
}

<h4>Araç Bilgileri</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AracId" />
            <div class="form-group">
                <label asp-for="AracPlaka" class="control-label"></label>
                <input asp-for="AracPlaka" class="form-control" />
                <span asp-validation-for="AracPlaka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AracMarka" class="control-label"></label>
                <input asp-for="AracMarka" class="form-control" />
                <span asp-validation-for="AracMarka" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AracModel" class="control-label"></label>
                <input asp-for="AracModel" class="form-control" />
                <span asp-validation-for="AracModel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MusteriId" class="control-label"></label>
                <select asp-for="MusteriId" class="form-control" asp-items="ViewBag.MusteriId"></select>
                <span asp-validation-for="MusteriId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

