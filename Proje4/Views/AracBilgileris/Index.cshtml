@model IEnumerable<Proje4.Models.AracBilgileri>

@{
    ViewData["Title"] = "Index";
}
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Kayıt</a>
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AracPlaka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AracMarka)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AracModel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AracPhoto)
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.Musteri)*@
                Müşteri Adı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AracPlaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AracMarka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AracModel)
            </td>
            <td>
                <img src="@("~/Image/"+item.AracPhoto)" asp-append-version=true width="100" height="100"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Musteri.MusteriAd)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.AracId">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.AracId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.AracId">Delete</a>
 
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({

        });
    });
</script>
