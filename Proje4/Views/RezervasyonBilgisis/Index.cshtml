@model IEnumerable<Proje4.Models.RezervasyonBilgisi>

@{
    ViewData["Title"] = "Index";
}
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Yeni Kayıt</a> 
</p>
<table class="table table-bordered table-striped" id="tbllist">
    <thead class="bg-dark text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FinishTime)
            </th>
            <th>
                Araç Plaka
            </th>
            <th>
                Park Yeri Adı
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinishTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Arac.AracPlaka)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Park.ParkAd)
            </td>
            <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.RezervasyonId">Edit</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.RezervasyonId">Details</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.RezervasyonId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/jquery.dataTables.css" />
<script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.js"></script>
<script type="text/javascript">
    var js = jQuery.noConflict(true);
    js(document).ready(function () {
        js('#tbllist').DataTable({

        });
    });
</script>